{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    // Either remove rootDir completely or set it to the project root
    "rootDir": "."  // Changed from "./src" to "."
  },
  "include": 
    ["src/**/*", "test/**/*"
  ],
  "exclude": ["node_modules"]
}